{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "typeRoots": ["./node_modules/@types", "src/types"],
    "paths": {
      "@src/*": ["src/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"]
}
